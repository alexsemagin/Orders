<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/name_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:minHeight="72dp"
                android:orientation="horizontal"
                android:padding="@dimen/materialize_screen_edge">

                <ImageView
                    android:id="@+id/name_iv"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/vector_drawable_ic_person"
                    tools:ignore="ContentDescription" />

                <Space
                    android:layout_width="32dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/text_set_name"
                    android:textAppearance="?android:textAppearanceMedium" />
            </LinearLayout>


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/materialize_screen_edge"
                android:layout_marginStart="@dimen/materialize_screen_edge">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginStart="56dp"
                    android:background="?android:attr/listDivider" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/date_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:minHeight="72dp"
                android:orientation="horizontal"
                android:padding="@dimen/materialize_screen_edge">

                <ImageView
                    android:id="@+id/date_iv"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/vector_drawable_ic_time"
                    tools:ignore="ContentDescription" />

                <Space
                    android:layout_width="32dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/date_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/text_select_date"
                    android:textAppearance="?android:textAppearanceMedium" />
            </LinearLayout>





            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/materialize_screen_edge"
                android:layout_marginStart="@dimen/materialize_screen_edge">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginStart="56dp"
                    android:background="?android:attr/listDivider" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/address_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:minHeight="72dp"
                android:orientation="horizontal"
                android:padding="@dimen/materialize_screen_edge">

                <ImageView
                    android:id="@+id/marker_iv"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/vector_drawable_ic_place_grey"
                    tools:ignore="ContentDescription" />

                <Space
                    android:layout_width="32dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tv_point_deliver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/text_address_order"
                    android:textAppearance="?android:textAppearanceMedium" />
            </LinearLayout>


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/materialize_screen_edge"
                android:layout_marginStart="@dimen/materialize_screen_edge">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginStart="56dp"
                    android:background="?android:attr/listDivider" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/call_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:minHeight="72dp"
                android:orientation="horizontal"
                android:padding="@dimen/materialize_screen_edge">

                <ImageView
                    android:id="@+id/call_iv"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/vector_call"
                    tools:ignore="ContentDescription" />

                <Space
                    android:layout_width="32dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tv_call_deliver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/text_set_number_phone"
                    android:textAppearance="?android:textAppearanceMedium" />
            </LinearLayout>


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/materialize_screen_edge"
                android:layout_marginStart="@dimen/materialize_screen_edge">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginStart="56dp"
                    android:background="?android:attr/listDivider" />
            </FrameLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <!-- FAB -->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/fab_margin"
        android:clickable="true"
        app:srcCompat="@drawable/ic_add"
        app:borderWidth="0dp"
        android:visibility="gone"/>

</android.support.design.widget.CoordinatorLayout>